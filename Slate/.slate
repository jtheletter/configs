# https://github.com/jigish/slate

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind m:shift;cmd                  push left           bar-resize:screenSizeX                push up  bar-resize:screenSizeY  # full-screen
bind home:ctrl;alt;cmd            push left           bar-resize:screenSizeX/3*2                                             # left 2/3
bind end:ctrl;alt;cmd             push right          bar-resize:screenSizeX/3*2                                             # right 2/3
bind pageUp:ctrl;alt;cmd          push up             bar-resize:screenSizeY/3*2                                             # top 2/3
bind pageDown:ctrl;alt;cmd        push down           bar-resize:screenSizeY/3*2                                             # bottom 2/3
bind home:ctrl;alt                push left           bar-resize:screenSizeX/2                                               # left 1/2
bind end:ctrl;alt                 push right          bar-resize:screenSizeX/2                                               # right 1/2
bind pageUp:ctrl;alt              push up             bar-resize:screenSizeY/2                                               # top 1/2
bind pageDown:ctrl;alt            push down           bar-resize:screenSizeY/2                                               # bottom 1/2
bind home:ctrl                    push left           bar-resize:screenSizeX/3                                               # left 1/3
bind end:ctrl                     push right          bar-resize:screenSizeX/3                                               # right 1/3
bind pageUp:ctrl                  push up             bar-resize:screenSizeY/3                                               # top 1/3
bind pageDown:ctrl                push down           bar-resize:screenSizeY/3                                               # bottom 1/3
bind pageUp:ctrl;alt;cmd;shift    corner top-left     resize:screenSizeX/3*2;screenSizeY/2                                   # top-left 2/3
bind pageDown:ctrl;alt;cmd;shift  corner bottom-left  resize:screenSizeX/3*2;screenSizeY/2                                   # bottom-left 2/3
bind pageUp:ctrl;alt;shift        corner top-left     resize:screenSizeX/2;screenSizeY/2                                     # top-left 1/2
bind pageDown:ctrl;alt;shift      corner bottom-left  resize:screenSizeX/2;screenSizeY/2                                     # bottom-left 1/2
bind pageUp:ctrl;shift            corner top-left     resize:screenSizeX/3;screenSizeY/2                                     # top-left 1/3
bind pageDown:ctrl;shift          corner bottom-left  resize:screenSizeX/3;screenSizeY/2                                     # bottom-left 1/3
